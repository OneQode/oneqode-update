---
postType: Vacancy
ogImage: og-image.jpg
careersRSS: true
---
{% include _header.liquid %}
		<section class="hero career">
			<div class="container">
				<div class="row middle-xs">
					<div class="col-md-6">
						<p class="superheading">{{ postType }}</p>
						<h1>{{ jobTitle }}<mark class="dot">.</mark></h1>
						<p class="subheading">{{ jobHours }} â€¢ {{ jobLocation }}</p>
					</div>
					<div class="col-md-4 col-md-offset-2">
						<div class="applicant-info box p-2 text-center sm-mt-4">
							{%- if hrLink %}
							<p><a href="{{ hrLink }}" class="button mb-2" target="_blank">Apply Now</a></p>
							{%- endif %}
							<h2>Hiring Contact</h2>
							<p>{{ hrContact }}</p>
						</div>
					</div>
				</div>
			</div>
		</section>
		<section class="black-to-footer py-4">
			<div class="container">
				<div class="row">
					<div class="col-md-8">
						{{ content }}
						{%- if hrLink %}
						<p class="mt-4"><a href="{{ hrLink }}" class="button mb-2" target="_blank">Apply Now</a></p>
						{%- endif %}
						<div class="applicant-info box p-2">
							<h2>Hiring Contact</h2>
							<p>{{ hrContact }}<br><a href="mailto:{{ global.hrEmail }}">{{ global.hrEmail }}</a></p>
						</div>
					</div>
				</div>
			</div>
		</section>
{% include _footer.liquid %}