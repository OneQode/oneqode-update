---
postType: Press Release
postTitle: This is the title
ogImage: og-image.jpg
---
{% include _header.liquid %}
		<section class="hero">
			<div class="container">
				<div class="row middle-xs">
					<div class="col-md-7">
						<p class="superheading">{{ postType }}</p>
						<h1>{{ postTitle }}<mark class="dot">.</mark></h1>
						<p class="subheading">{{ date | readableDate }}</p>
					</div>
					<div class="col-md-4 col-md-offset-1">
						<div class="press-info box p-2 text-center sm-mt-4">
							<h2>Media Contact</h2>
							<p><a href="mailto:{{ global.mediaEmail }}">{{ global.mediaEmail }}</a></p>
							<h2 class="mt-2">Media Pack</h2>
							<p><small><a href="{{ global.mediaPackLink }}" class="button ghost" target="_blank">Download</a></small></p>
						</div>
					</div>
				</div>
			</div>
		</section>
		<section class="black-to-footer py-4">
			<div class="container">
				<div class="row">
					<div class="col-md-8">
						{{ content }}
						<div class="press-info box p-2">
							<h2>Media Contact</h2>
							<p>{{ mediaContact }}<br><a href="mailto:{{ global.mediaEmail }}">{{ global.mediaEmail }}</a></p>
						</div>
					</div>
				</div>
			</div>
		</section>
{% include _footer.liquid %}