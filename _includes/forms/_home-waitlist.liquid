<form action="https://submit-form.com/XSkyV7rZ" id="form-home-waitlist">
	<div class="row mobile-flex">
		<div class="col-xs-12 col-sm-6 mb-1">
			<input type="text" name="first_name" placeholder="First Name" autocapitalize="words" required>
		</div>
		<div class="col-xs-12 col-sm-6 mb-1">
			<input type="text" name="last_name" placeholder="Last Name" autocapitalize="words" required>
		</div>
		<div class="col-xs-12 col-sm-6 mb-1">
			<input type="email" name="email" placeholder="Email Address" required>
		</div>
		<div class="col-xs-12 col-sm-6 mb-1">
			<input type="text" name="address" placeholder="Street Address" autocapitalize="words" required>
		</div>
		<div class="col-xs-12 col-sm-6 mb-1">
			<input type="number" name="postcode" placeholder="Postcode" required>
		</div>
		<div class="col-xs-12 text-center">
			<input type="checkbox" name="gdpr" tabindex="-1" autocomplete="off">
			<input type="hidden" name="form" value="Home - Waitlist" />
			<input type="hidden" name="_redirect" value="https://www.oneqode.com/waitlist/success/"/>
			<button type="submit" class="button mt-1">Submit</button>
		</div>
	</div>
</form>